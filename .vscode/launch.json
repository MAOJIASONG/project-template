    "version": "0.2.0",
    "configurations": [
        {
            "name": "sh debugger",
            "type": "debugpy",
            "request": "attach",
            "listen": {
                "host": "localhost",
                "port": 9501
            },
            "justMyCode": false,
        },
        {
            "name": "Default Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ],
            "env": {},
        }
    ]
}